@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center text-primary mb-4">
                <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
            </h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        Recordarme
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg mb-3">Iniciar Sesión</button>
                <div class="text-center">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                </div>
                <hr />
                <div class="text-center">
                    <p class="mb-2">
                        ¿No tienes una cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Regístrate aquí</a>.
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Reenviar confirmación de email</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
