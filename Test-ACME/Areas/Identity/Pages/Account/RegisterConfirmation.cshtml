@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Registro";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center">
            <h2 class="card-title text-primary mb-4">
                <i class="bi bi-check-circle-fill"></i> Registro Exitoso
            </h2>
            @if (Model.DisplayConfirmAccountLink)
            {
                <p class="mb-3">
                    Esta aplicación no tiene configurado un servicio de envío de correos. Puedes confirmar tu cuenta haciendo clic en el enlace a continuación.
                </p>
                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-lg w-100">
                    Confirmar Cuenta
                </a>
            }
            else
            {
                <p class="mb-3">
                    Revisa tu correo electrónico para confirmar tu cuenta.
                </p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
}
