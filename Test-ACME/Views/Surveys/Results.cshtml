@model Test_ACME.Models.Survey

@{
    ViewData["Title"] = "Resultados de la Encuesta";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">@ViewData["Title"]</h1>
    <p class="text-center text-muted">@Model.Description</p>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Resultados: @Model.Name</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Campo</th>
                        <th>Título</th>
                        <th>Respuestas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var field in Model.Fields)
                    {
                        <tr>
                            <td>@field.Name</td>
                            <td>@field.Title</td>
                            <td>
                                @if (field.SurveyResponses.Any())
                                {
                                    <ul class="list-group">
                                        @foreach (var response in field.SurveyResponses)
                                        {
                                            <li class="list-group-item">@response.Value</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">No hay respuestas registradas.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary btn-lg" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Regresar a Encuestas
        </a>
    </div>
</div>
