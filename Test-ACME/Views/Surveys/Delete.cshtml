@model Test_ACME.Models.Survey

@{
    ViewData["Title"] = "Eliminar Encuesta";
}

<div class="container mt-5">
    <h1 class="text-danger text-center">@ViewData["Title"]</h1>
    <p class="text-center text-muted">¿Estás seguro de que deseas eliminar esta encuesta? Esta acción no se puede deshacer.</p>

    <div class="card shadow-sm my-4">
        <div class="card-body">
            <h4 class="card-title text-primary">Detalles de la Encuesta</h4>
            <dl class="row mt-3">
                <dt class="col-sm-3 font-weight-bold">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 font-weight-bold">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 font-weight-bold">Enlace Único:</dt>
                <dd class="col-sm-9">
                    <a href="@Url.Action("Index", "FillSurvey", new { uniqueLink = Model.UniqueLink })" target="_blank">
                        /FillSurvey/@Model.UniqueLink
                    </a>
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Eliminar Encuesta
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </div>
</div>
