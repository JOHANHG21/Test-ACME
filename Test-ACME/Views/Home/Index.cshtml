@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-3 text-primary fw-bold">Bienvenido a Encuestas ACME</h1>
            <p class="lead text-muted mt-3">
                Administra tus encuestas y consulta resultados fácilmente.
            </p>
            <a href="/Surveys/Index" class="btn btn-primary btn-lg mt-4">Ir a Encuestas</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-clipboard-data text-primary display-4"></i>
            <h3 class="mt-3">Crea Encuestas</h3>
            <p class="text-muted">
                Diseña encuestas personalizadas para obtener la información que necesitas.
            </p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-bar-chart-line text-success display-4"></i>
            <h3 class="mt-3">Consulta Resultados</h3>
            <p class="text-muted">
                Analiza las respuestas recibidas de manera clara y organizada.
            </p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-lock text-danger display-4"></i>
            <h3 class="mt-3">Acceso Seguro</h3>
            <p class="text-muted">
                Protege tus encuestas con inicio de sesión y autorización.
            </p>
        </div>
    </div>
</div>
